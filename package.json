{
	"name": "parcial-3-multiplataforma",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"main": "electron/main.cjs",
	"scripts": {
		"dev": "cross-env NODE_ENV=development vite --port 5175",
		"dev:web": "cross-env NODE_ENV=development vite --port 5175",
		"dev:desktop": "concurrently --kill-others \"cross-env NODE_ENV=development vite --port 5175\" \"wait-on http://127.0.0.1:5175 && cross-env NODE_ENV=development electron .\"",
		"build": "cross-env NODE_ENV=production VITE_TARGET=web tsc -b && vite build",
		"build:desktop": "cross-env NODE_ENV=production VITE_TARGET=desktop tsc -b && vite build && electron-builder --win",
		"lint": "eslint .",
		"preview": "vite preview"
	},
	"dependencies": {
		"@supabase/supabase-js": "^2.47.10",
		"@tailwindcss/vite": "4.1.16",
		"dotenv": "^16.4.5",
		"jspdf": "3.0.3",
		"jspdf-autotable": "5.0.2",
		"react": "^19.1.1",
		"react-dom": "^19.1.1",
		"react-router": "7.9.4",
		"sweetalert2": "11.26.3",
		"tailwindcss": "4.1.16",
		"xlsx": "0.18.5",
		"zod": "4.1.12"
	},
	"devDependencies": {
		"@eslint/js": "^9.36.0",
		"@types/node": "^24.6.0",
		"@types/react": "^19.1.16",
		"@types/react-dom": "^19.1.9",
		"@vitejs/plugin-react": "^5.0.4",
		"babel-plugin-react-compiler": "^19.1.0-rc.3",
		"concurrently": "^9.2.1",
		"cross-env": "^10.1.0",
		"electron": "^31.7.5",
		"electron-builder": "^25.1.8",
		"eslint": "^9.36.0",
		"eslint-plugin-react-hooks": "^5.2.0",
		"eslint-plugin-react-refresh": "^0.4.22",
		"globals": "^16.4.0",
		"typescript": "~5.9.3",
		"typescript-eslint": "^8.45.0",
		"vite": "^7.1.7",
		"wait-on": "^9.0.1"
	},
	"build": {
		"appId": "com.ufg.multiplataforma.app",
		"productName": "UFG Multiplataforma",
		"directories": {
			"buildResources": "build",
			"output": "dist-electron"
		},
		"files": [
			"dist/**",
			"electron/**"
		],
		"win": {
			"target": [
				"nsis"
			],
			"icon": "build/icon.ico"
		},
		"nsis": {
			"oneClick": false,
			"perMachine": true,
			"allowToChangeInstallationDirectory": true,
			"createDesktopShortcut": true,
			"createStartMenuShortcut": true,
			"runAfterFinish": true
		}
	}
}
